{
  "name": "node-mvc",
  "version": "1.0.0",
  "description": "Node MVC framework to build rest API",
  "main": "server.js",
  "repository": "https://github.com/alexdant91/node-mvc",
  "author": "Alessandro D'Antoni",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:ui\"",
    "dev:ui": "yarn --cwd ./resource/node-mvc-ui serve",
    "dev:server": "nodemon app.js --ignore 'docs/*.*'",
    "start:ui": "yarn --cwd ./resource/node-mvc-ui build && yarn --cwd ./resource/node-mvc-ui start --mode production",
    "start": "pm2 start ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "db:start": "sudo mongod --port 27017 --dbpath=/Users/alex/Documents/MongoDB/data",
    "redis:start": "redis-server",
    "make:env": "node ./vendor/Console/cmd/env",
    "make:model": "node ./vendor/Console/cmd/model",
    "make:controller": "node ./vendor/Console/cmd/controller",
    "make:middleware": "node ./vendor/Console/cmd/middleware",
    "make:migration": "node ./vendor/Console/cmd/migrate",
    "make:test": "jest",
    "init:test": "jest --init",
    "delete:model": "node ./vendor/Console/cmd/delete/model",
    "delete:controller": "node ./vendor/Console/cmd/delete/controller",
    "delete:middleware": "node ./vendor/Console/cmd/delete/middleware"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-promise": "^2.0.3",
    "helmet": "^4.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.11",
    "mongoose-autopopulate": "^0.12.3",
    "mongoose-paginate-v2": "^1.3.13",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "pluralize": "^8.0.0",
    "pm2": "^4.5.1",
    "redis": "^3.0.2",
    "socket.io": "^3.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "nodemon": "^2.0.7"
  }
}
